<div class="form-group">
  <div class="col-sm-2">
    <label class="control-label">Title</label>
  </div>
  <div class="col-sm-10">
    <%= text_field_tag "project[todos_attributes][][title]", "", class: 'form-control' %>
    <%= hidden_field_tag "project[todos_attributes][][creator_id]", current_user.id, class: 'form-control' %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-2">
    <label class="control-label">Description</label>
  </div>
  <div class="col-sm-10">
    <%= text_area_tag "project[todos_attributes][][description]", "", class: 'form-control', rows: 10 %>
  </div>
</div>